<div class="container" style="padding-top:30px; text-align:center;">
    <div class="jumbotron">
        <h1 class="lead">BOOK EVENTS </h1>
    </div>
</div>

<div class="container" >
    <div class="row">
        <div class="col-md-12 card" style="text-align:left;">
            <form action="/event/bookevent" method="POST" style="padding:30px">
                
                <div class="dropdown">
                    <div class="form-group">
                        <label for="eventname">Event Name: </label>
                        <input type="text" class="form-control" id="eventname" name="eventname" value="{{titleArray.name}}">
                        <!--
                        <select class="form-control" id="eventname" name="eventname">
                            <option value="">Select</option>
                            {{#each titleArray}}
                                <form action="/events" method="GET"></form>
                                <option "{{name}}">{{name}}</option>
                            {{/each}}
                        </select>
                        -->
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Your name.." value="{{username}}">
                </div>

                <div class="form-group">
                    <label for="matricno">Matric No:</label>
                    <input type="text" class="form-control" id="matricno" name="matricno" placeholder="Your matric no..">
                </div>

                <div class="form-group">
                    <label for="phoneno">Phone No:</label>
                    <input type="text" class="form-control" id="phoneno" name="phoneno" placeholder="Your phone no..">
                </div>

                <div class="form-group">
                    <label for="email">Email address:</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="email eg: john@student.usm.my">
                </div>

                <div class="form-group">
                    <label for="quan">Quantity:</label>
                    <select id="quantity" name="Quantity">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary" style="vertical-allign:middle">Book Now</button>

            </form>
        </div>
    </div>
</div>