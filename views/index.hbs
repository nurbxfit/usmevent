
<!--navbar-->
{{#if isLogin}}
    {{>navbarprofile}}
{{else}}
    {{>navbar}}
{{/if}}

<!-- HEAD consist of searchbar and maps-->

<div class="container-fluid" style="margin-top:20px">
<!--Searchbar-->
<div class="column">
    <form class="form-group" method="GET" action="/maps/search">
        <div class="active-cyan-3 active-cyan-4 mb-4">
            <br>
            <input class="form-control typeahead tt-query" type="text" placeholder="Search for events.." name="key">
            <button type="submit" class="btn btn-outline-secondary">search</button>
        </div>
    </form>
</div>


{{>maps}}

</div>
<!--END HEAD-->



<!--Event List Card-->
<div class="container-fluid">
    <br>
    <h2 style="color:whitesmoke; text-align:center; margin-top:50px;">
        USM Events
    </h2>
    <p style="color:whitesmoke; text-align:center; margin-bottom:40px">
        Click cards below to find more about the event.
    </p>

    <div class="row" style="text-align:center;" >
        {{#each titleArray}}
        <div class="col-sm-6" style="margin-top:10px">
            <div class="card" >
                <div class="card-body">
                    <form action="/event/eventdetails" method="GET">
                    <h5 class="card-title"><input type="hidden" name="name" value="{{name}}"/>{{name}}</h5>
                    <p class="card-text">{{description}}</p>

                        <button class="btn btn-primary" type="submit" >Find out more</button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

