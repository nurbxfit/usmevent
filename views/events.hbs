
{{#if isLogin}}
{{>navbarprofile}}
{{else}}
{{>navbar}}
{{/if}}

<!--Event List Card-->
<div class="container-fluid">
    <br>
    <h2 style="color:whitesmoke; text-align:center; margin-top:50px;">
        USM Events
    </h2>
    <p style="color:whitesmoke; text-align:center; margin-bottom:40px">
        Click cards below to find more about the event.
    </p>

<!--only login user can add new event-->
{{#if isLogin}}
<!--addevent-->
    <div class="container" style="margin-top:10px">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add New Event</h5><br>
                <a href="/addevent" width="30%" height="auto"><img width="10%" height="10%" src="/images/addicon.png" alt="addEvent" ></a><br></br>
                <a class="btn btn-primary" style="width:auto; padding-right:40px; padding-left: 40px; border-radius:20pt" href="/organiser/addevent">Add New Event</a>
            </div>
        </div>
    </div>
{{/if}}
<!--event list-->

    <div class="row" style="text-align:center;" >
        {{#each titleArray}}
        <div class="col-sm-6" style="margin-top:10px">
            <div class="card" >
                <div class="card-body">
                    <form action="/event/eventdetails" method="GET">
                    <h5 class="card-title"><input type="hidden" name="name" value="{{name}}"/>{{name}}</h5>
                    <p class="card-text">{{description}}</p>

                        <button class="btn btn-primary" type="submit" >Find out more</button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
